<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:titleMargin">8dp</item>
        <!-- Add other styles for your cards as needed -->
    </style>
    <style name="WhiteBackgroundDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:colorAccent">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerVertical">true</item>

    </style>

    <style name="LineStyle">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#000000</item>
    </style>

</resources>
